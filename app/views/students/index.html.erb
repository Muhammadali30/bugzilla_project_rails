<%= link_to "Show Teachers",teachers_path%>
<%= link_to "Show Courses",courses_path%>
<br><br><br>
<%= link_to "Add new Student",new_student_path%>


<table border=1>
<thead>
<tr>
    <td>ID</td>
    <td>name</td>
    <td>Show</td>
    <td>edit</td>
    <td>Delete</td>

</tr>
</thead>
<tbody>
    <% @students.each do |student|%>
    <tr>
        <td><%= student.id%></td>
        <td><%= student.name%></td>
        <td><%= link_to "Show",student_path(student)%></td>
        <td><%= link_to "Edit",edit_student_path(student)%></td>
        <td><%= link_to "Delete",student_path(student),data: {
            turbo_method: :delete
        }%></td>


    </tr>
    <%end%>
</tbody>
</table>